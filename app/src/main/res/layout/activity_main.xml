<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.android.gkglogbook.ShowRecord">

        <ImageView
            android:src="@drawable/totality_logo"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Last Login Credential was:"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding"
            android:textColor="@color/red"
            android:textSize="@dimen/textSize" />

        <View
            android:layout_height="@dimen/viewSize"
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding"
            android:layout_marginTop="@dimen/marginTop"
            />

        <TextView
            android:id="@+id/record"
            android:padding="@dimen/padding"
            android:layout_margin="@dimen/padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize" />

        <View
            android:layout_height="@dimen/viewSize"
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding"
            android:layout_marginTop="@dimen/marginTop"
            />

        <Button
            android:id="@+id/refreshButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/refreshButton"
            android:textSize="@dimen/textSize"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding"
            android:layout_marginTop="@dimen/marginTop"
            android:background="@drawable/custombutton"
            android:fontFamily="sans-serif-medium"
            android:onClick="refreshButton"
            />


        <Button
            android:id="@+id/showListButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/showListButton"
            android:textSize="@dimen/textSize"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding"
            android:layout_marginTop="@dimen/marginTop"
            android:background="@drawable/custombutton"
            android:fontFamily="sans-serif-medium"
            android:onClick="showCredentials"
            />


    </LinearLayout>
</ScrollView>